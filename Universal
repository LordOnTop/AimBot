-- Auto Clicker Script Universal

local autoClickerEnabled = false
local clickDelay = 10  -- delay padrão de 10ms

-- Função para simular o clique (A função específica de clique deve ser substituída conforme o ambiente)
local function simulateClick()
    -- Este comando é apenas um marcador de posição.
    -- No Windows, você poderia usar uma chamada ao PowerShell para simular um clique, ou outras técnicas conforme necessário.
    print("Clique simulado!")  -- Substitua por comando de clique real
end

-- Função para o Auto Clicker
local function autoClicker()
    while autoClickerEnabled do
        simulateClick()
        os.execute("sleep " .. clickDelay / 1000)  -- Pausa por delay em segundos
    end
end

-- Menu simples
local function showMenu()
    while true do
        print("Escolha uma opção:")
        print("1. Iniciar Auto Clicker")
        print("2. Parar Auto Clicker")
        print("3. Configurar Delay para 10ms")
        print("4. Sair")
        
        local choice = tonumber(io.read())
        
        if choice == 1 then
            autoClickerEnabled = true
            autoClicker()
        elseif choice == 2 then
            autoClickerEnabled = false
            print("Auto Clicker parado.")
        elseif choice == 3 then
            clickDelay = 10
            print("Delay configurado para 10ms.")
        elseif choice == 4 then
            print("Saindo...")
            break
        else
            print("Opção inválida, tente novamente.")
        end
    end
end

showMenu()

-- Exemplo de uma interface simples com um botão
local interfaceAberta = false

function criarInterface()
    -- Crie a interface gráfica aqui (use a biblioteca gráfica de sua escolha)
    -- Por exemplo, você pode usar o LÖVE2D ou outra engine Lua.

    -- Defina o botão
    local botaoAbrirFechar = criarBotao("Abrir/Fechar")
    botaoAbrirFechar.onClick = function()
        interfaceAberta = not interfaceAberta
        if interfaceAberta then
            -- Lógica para abrir a interface
            print("Interface aberta!")
        else
            -- Lógica para fechar a interface
            print("Interface fechada.")
        end
    end
end

-- Função para criar um botão (substitua com a biblioteca gráfica real)
function criarBotao(texto)
    local botao = {}
    botao.texto = texto
    botao.onClick = nil
    return botao
end

-- Chame a função para criar a interface
criarInterface()
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer
local Holding = false

_G.AimbotEnabled = true
_G.TeamCheck = false -- Se verdadeiro, o aimbot só mirará em membros da equipe inimiga.
_G.AimPart = "Head" -- Parte do corpo onde o aimbot mirará.
_G.Sensitivity = 0 -- Tempo em segundos para o aimbot travar no alvo.
_G.CircleRadius = 80 -- Raio do círculo de FOV.
_G.CircleColor = Color3.fromRGB(255, 255, 255) -- Cor do círculo de FOV.

local FOVCircle = Drawing.new("Circle")
FOVCircle.Position = Vector2.new(UserInputService:GetMouseLocation().X, UserInputService:GetMouseLocation().Y)
FOVCircle.Radius = _G.CircleRadius
FOVCircle.Color = _G.CircleColor
FOVCircle.Visible = true

local function GetClosestPlayer()
    local MaximumDistance = _G.CircleRadius
    local Target = nil

    for _, v in pairs(Players:GetPlayers()) do
        if v.Name ~= LocalPlayer.Name then
            if _G.TeamCheck == true and v.Team ~= LocalPlayer.Team or _G.TeamCheck == false then
                if v.Character and v.Character:FindFirstChild("HumanoidRootPart") and v.Character:FindFirstChild("Humanoid") and v.Character.Humanoid.Health > 0 then
                    local ScreenPoint = workspace.CurrentCamera:WorldToScreenPoint(v.Character.HumanoidRootPart.Position)
                    local VectorDistance = (Vector2.new(UserInputService:GetMouseLocation().X, UserInputService:GetMouseLocation().Y) - Vector2.new(ScreenPoint.X, ScreenPoint.Y)).Magnitude
                    if VectorDistance < MaximumDistance then
                        Target = v
                    end
                end
            end
        end
    end

    return Target
end

UserInputService.InputBegan:Connect(function(Input)
    if Input.UserInputType == Enum.UserInputType.MouseButton2 then
        Holding = true
    end
end)

UserInputService.InputEnded:Connect(function(Input)
    if Input.UserInputType == Enum.UserInputType.MouseButton2 then
        Holding = false
    end
end)

game:GetService("RunService").RenderStepped:Connect(function()
    FOVCircle.Position = Vector2.new(UserInputService:GetMouseLocation().X, UserInputService:GetMouseLocation().Y)
    FOVCircle.Radius = _G.CircleRadius

    if Holding and _G.AimbotEnabled then
        local Target = GetClosestPlayer()
        if Target then
            workspace.CurrentCamera.CFrame = CFrame.new(workspace.CurrentCamera.CFrame.Position, Target.Character[_G.AimPart].Position)
        end
    end
end)

local ui = require("ui")  -- Usando uma biblioteca fictícia para interface, ajuste conforme a sua necessidade

local autoClickerEnabled = false
local clickDelay = 10  -- delay padrão de 10ms

-- Função para simular o clique
local function autoClicker()
    while autoClickerEnabled do
        -- Aqui você colocaria o código para executar o clique
        print("Clicando...")  -- Representação do clique no console
        os.execute("sleep " .. clickDelay / 1000)
    end
end

-- Função para iniciar o Auto Clicker
local function startAutoClicker()
    autoClickerEnabled = true
    autoClicker()
end

-- Função para parar o Auto Clicker
local function stopAutoClicker()
    autoClickerEnabled = false
end

-- Interface de usuário
local function createMenu()
    local menu = ui.newMenu()

    -- Primeiro Menu: Auto Clicker
    local autoClickerMenu = menu:addSubMenu("Auto Clicker")
    autoClickerMenu:addButton("Iniciar", startAutoClicker)
    autoClickerMenu:addButton("Parar", stopAutoClicker)

    -- Segundo Menu: Configurar delay
    local delayMenu = menu:addSubMenu("Configurar Delay")
    delayMenu:addButton("Definir Delay para 10ms", function()
        clickDelay = 10
        print("Delay definido para 10ms")
    end)

    menu:show()
end

createMenu()
